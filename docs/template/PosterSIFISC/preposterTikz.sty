}

%%Title made with TikZ
\newdimen\altura
\altura=12cm
\newcommand{\mytitle}[3]{
\begin{tikzpicture}[remember picture,overlay]
\node at (current page.north west){
  \begin{tikzpicture}[remember picture,overlay]
      \draw[fill=#3] (-3cm,0) rectangle (\paperwidth,-\altura);
      \node[right] at (-0.8cm,-.65*\altura) {
	\includegraphics[height=12cm]{#1} %%First logo
      };
  \end{tikzpicture}
};
\node at (current page.north east){
  \begin{tikzpicture}[remember picture,overlay]
  \filldraw[white] (-14.4cm,0) rectangle (0,-1.01*\altura);
      \node[left] at (-2.9cm,-.61*\altura) {
	\includegraphics[height=9.5cm]{#2} %%Second logo
      };
      \filldraw[myyellow](-15.5cm,0) rectangle (-14.4cm,-\altura);
      
  \end{tikzpicture}
};
\node at (current page.north){
  \begin{tikzpicture}[remember picture,overlay,node distance=2mm]
    \node[white] (n1) at (-1.5,-4) {\shortstack{\Large\textbf{\titleposter}}};
    \node[white] (n2) [below = of n1] {\shortstack{\Large\textbf{\bigtitle}}};
    \node[white] (n3) [below = of n2] {\name};
    \node[white] (n4) [below = of n3] {\small{\institutional}};
  \end{tikzpicture}
};
\end{tikzpicture}
}

